generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String
  email String
  imageUrl String
  subscription Boolean @default(false)
  videosData VideoData[]
}

model VideoData{
  id String @id @default(cuid())
  script Json
  audioUrl String
  caption Json
  imageList String[]
  createdBy String
  user User @relation(fields: [createdBy], references: [id])
}
